
# ========================================
# BACKEND CONFIGURATION (Required)
# ========================================
# Copy this file to .env and fill in your actual values

# Node environment (development | production | staging)
NODE_ENV=development

# Backend server port
PORT=3000

# Frontend origin (comma-separated for multiple origins in production)
CORS_ORIGIN=http://localhost:3002
# Session encryption secret (MUST be changed in production)
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-key-change-in-production

# Frontend API Base URL (for calling backend endpoints)
# Use localhost to match frontend origin and avoid CORS issues
VITE_API_BASE_URL=http://localhost:3000

# ========================================
# DATABASE (Optional - Future use)
# ========================================
# DB_URL=postgresql://user:password@localhost:5432/dbname
# DB_NAME=test_automation_db

# ========================================
# LLM INTEGRATIONS
# ========================================
# LLM Provider Configuration
# Set DEFAULT_LLM_PROVIDER to auto-load a provider on startup
# Options: openai, groq, azure-openai, claude, testleaf
DEFAULT_LLM_PROVIDER=azure-openai
DEFAULT_LLM_MODEL=gpt-4

# OpenAI
VITE_OPENAI_API_KEY=sk-...
VITE_OPENAI_API_ENDPOINT=https://api.openai.com/v1
VITE_OPENAI_DEFAULT_MODEL=gpt-4-turbo

# Groq
VITE_GROQ_API_KEY=your-super-secret-key-change-in-production
VITE_GROQ_API_ENDPOINT=https://api.groq.com/openai/v1
VITE_GROQ_DEFAULT_MODEL=openai/gpt-oss-120b

# Azure OpenAI
VITE_AZURE_OPENAI_API_KEY=your-super-secret-key-change-in-production
VITE_AZURE_OPENAI_API_ENDPOINT=https://r-automations.cognitiveservices.azure.com/
VITE_AZURE_OPENAI_DEFAULT_MODEL=gpt-4
VITE_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1
VITE_AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Claude (Anthropic)
VITE_CLAUDE_API_KEY=sk-ant-...
VITE_CLAUDE_API_ENDPOINT=https://api.anthropic.com
VITE_CLAUDE_DEFAULT_MODEL=claude-3-opus-20240229

# TestLeaf
VITE_TESTLEAF_API_KEY=...
VITE_TESTLEAF_API_ENDPOINT=https://api.testleaf.com/v1
VITE_TESTLEAF_DEFAULT_MODEL=testleaf-sft

# ========================================
# AUTO-INITIALIZATION (Optional)
# ========================================
# If you set these, connections will auto-establish on backend startup
# No need to click "Connect" buttons in the UI for Jira and ServiceNow

# Default Integration (preferred when both are configured)
# Options: jira, servicenow
DEFAULT_INTEGRATION=servicenow

# Jira Auto-Connect Configuration
VITE_JIRA_API_ENDPOINT=https://vmohanrajesh.atlassian.net
VITE_JIRA_USERNAME=vmohan.rajesh@gmail.com
VITE_JIRA_API_KEY=your-super-secret-key-change-in-production

# ServiceNow Auto-Connect Configuration
VITE_SERVICENOW_API_ENDPOINT=https://dev182432.service-now.com
VITE_SERVICENOW_USERNAME=admin
VITE_SERVICENOW_PASSWORD=your-super-secret-key-change-in-production

# ========================================
# DEEPEVAL INTEGRATION
# ========================================
DEEPEVAL_SERVICE_URL=http://localhost:3001
